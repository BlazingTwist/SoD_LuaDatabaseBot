<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>
<StackPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="blazingtwist.sod_luadatabasebot.ui.LedButton"
        fx:id="container">
    <Button text="Hello!" styleClass="flat-button, button-small" focusTraversable="false" onMouseClicked="#onButtonClicked" fx:id="button"/>
    <Group StackPane.alignment="CENTER_RIGHT" translateX="5" scaleX="0.75" scaleY="0.75">
        <Circle radius="7" styleClass="button-led-frame"/>
    </Group>
    <Group StackPane.alignment="CENTER_RIGHT" translateX="3" scaleX="0.6" scaleY="0.6">
        <Circle radius="5" styleClass="button-led-off" fx:id="led"/>
    </Group>
</StackPane>
